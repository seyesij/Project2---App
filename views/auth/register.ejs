<% include ../partials/boilerplate %>

<div class='register-container1'>
<div class='register-container'>
  <div id='registerpage'>
  <h5>Create Your Account</h5>
  <form class='register' method='POST' action='/auth/register'>
    <input class='registering' name='firstname' type='text' placeholder='first name' required />
    <input class='registering' name='lastname' type='text' placeholder='last name' required />
    <input class='registering' name='username' type='text' placeholder='username' required />
    <input class='registering' name='email' type='email' placeholder='email' required />
    <input class='registering' name='password' type='password' placeholder='password' required />
    <input type='submit' value='Register!' />
  </form>
 </div>
</div>

<% include ../partials/end %>
